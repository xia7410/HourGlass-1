<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:background="@drawable/test2"
    >
	<TextView 
	    android:id="@+id/main_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:textSize="20dp"
	    android:paddingTop="20dp"
	    android:text="正在定位">
	</TextView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/weatherbutton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/sunny2"
            android:background="@drawable/buttonstyle"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="invisible"
            android:text="天气"/>

		<Button
        	android:id="@+id/myButton"
        	android:layout_width="120dp"
        	android:layout_height="120dp"
        	android:layout_margin="10dp"
        	android:drawableTop="@drawable/camera6"
        	android:text="相机"
        	android:background="@drawable/buttonstyle1"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:textSize="20sp"/>

	</LinearLayout>
	<LinearLayout
	    android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="40dp"
    	android:paddingLeft="40dp"
        android:paddingRight="20dp"
    	>

		<Button
		    android:id="@+id/poiButton"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_margin="10dp"
		    android:drawableTop="@drawable/location1"
		    android:text="周边搜索"
		    android:background="@drawable/buttonstyle2"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:textSize="20sp" />

		<Button
	   	    android:id="@+id/yunButton"
	   	 	android:layout_width="120dp"
	    	android:layout_height="120dp"
	    	android:layout_margin="10dp"
	    	android:drawableTop="@drawable/favorites1"
	    	android:text="云图"
	        android:background="@drawable/buttonstyle3"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:textSize="20sp" />

	</LinearLayout>
</LinearLayout>